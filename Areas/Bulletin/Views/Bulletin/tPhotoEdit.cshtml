@model MVC_HW3.Models.tPhoto

@{
    ViewBag.Title = "tPhotoEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>tPhotoEdit</h2>


@using (Html.BeginForm("tPhotoEdit", "Bulletin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>tPhoto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.fPh_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.fPh_PicFile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.fPh_PicFile)
                <img src="@Url.Action("ImagePreview","Bulletin",new { area= "Bulletin", id =Model.fPh_ID})"/>
                @Html.ValidationMessageFor(model => model.fPh_PicFile, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.fPh_Notes, "相片敘述", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fPh_Notes, new { htmlAttributes = new { @class = "form-control",id= "EditorForfPh_Notes" } })
                @Html.ValidationMessageFor(model => model.fPh_Notes, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.fPh_Date,"", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.fPh_Date)
                @Html.ValidationMessageFor(model => model.fPh_Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fAl_ID, "", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.fAl_ID)
                @Html.ValidationMessageFor(model => model.fAl_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fMC_ID, "", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.fMC_ID)
                @Html.ValidationMessageFor(model => model.fMC_ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Demo" id="Demo" class="btn btn-primary" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="儲存編輯" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
@section scripts{
    <script>
        $('#Demo').click(function () {
            $('#EditorForfPh_Notes').val('真是風和日麗的好天氣阿');            
        })
    </script>
}

<div>
    <div>
        @Html.ActionLink("回首頁", "Index", "Home", new { area = "" }, new { })
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

