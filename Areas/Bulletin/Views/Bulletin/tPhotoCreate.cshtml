@model MVC_HW3.Models.tPhoto

@{
    ViewBag.Title = "tPhotoCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>相片新增</h2> 

@using (Html.BeginForm("tPhotoCreate", "Bulletin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>相片內容</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.fPh_PicFile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                
                <input type="file" name="photoImage" multiple/>
                @Html.ValidationMessageFor(model => model.fPh_PicFile, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.fPh_Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.fPh_Date, new { htmlAttributes = new { @class = "form-control" } })
                @DateTime.Now.ToString()
                @Html.ValidationMessageFor(model => model.fPh_Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fAl_ID, "", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.fAl_ID)
                @Html.DisplayFor(model=>model.tAlbum.tTravelCase.fTC_Title)
                @Html.ValidationMessageFor(model => model.fAl_ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.fPh_Notes, "",htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.fPh_Notes)
                @Html.ValidationMessageFor(model => model.fPh_Notes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fMC_ID, "", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("fMC_ID", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.HiddenFor(model=>model.tMessageCode.fMC_ID)
                @Html.ValidationMessageFor(model => model.fMC_ID, "", new { @class = "text-danger" })
            </div>
        </div>
        @*<div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Demo" id="Demo" class="btn btn-primary" />
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="新增照片" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
@section scripts{
<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#imghead').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
    $("#inputimage").change(function () {
        readURL(this);
    });

</script>
}

    <div>
        @Html.ActionLink("回首頁", "Index", "Home", new { area = "" }, new { })
    </div>


